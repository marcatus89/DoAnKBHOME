@page "/admin/suppliers"
@attribute [Authorize(Roles = "Admin, Purchasing")]
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation

<h3>Quản lý Nhà cung cấp</h3>

<a href="/admin/suppliers/add" class="btn btn-primary mb-3">Thêm Nhà cung cấp</a>

@if (suppliers == null)
{
    <LoadingSpinner />
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Tên Nhà cung cấp</th>
                <th>Người liên hệ</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in suppliers)
            {
                <tr>
                    <td>@supplier.Name</td>
                    <td>@supplier.ContactPerson</td>
                    <td>@supplier.Email</td>
                    <td>@supplier.PhoneNumber</td>
                    <td>
                        <a href="@($"admin/suppliers/edit/{supplier.Id}")" class="btn btn-sm btn-secondary">Sửa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Supplier>? suppliers;

    protected override async Task OnInitializedAsync()
    {
        suppliers = await DbContext.Suppliers.OrderBy(s => s.Name).ToListAsync();
    }
}
