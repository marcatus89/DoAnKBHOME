@using DoAnTotNghiep.Models

<div class="filter-controls-bar mb-4 p-3 bg-light rounded">
    <div class="row align-items-center">
        <div class="col-md-4">
            <strong><span class="oi oi-grid-three-up"></span> Sắp xếp theo:</strong>
        </div>
        <div class="col-md-4">
            <select class="form-select" @onchange="OnSortChanged">
                <option value="default">Mặc định</option>
                <option value="price_asc">Giá: Tăng dần</option>
                <option value="price_desc">Giá: Giảm dần</option>
            </select>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<string> SortChanged { get; set; }

    private async Task OnSortChanged(ChangeEventArgs e)
    {
        var sortValue = e.Value?.ToString() ?? "default";
        await SortChanged.InvokeAsync(sortValue);
    }
}
